<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="co.poynt.app.qualia.MainActivity">

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <!-- nagivation dots -->

    <ImageView
        android:id="@+id/dotOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="@dimen/dot_top_margin"
        android:src="@drawable/dot_gray" />

    <ImageView
        android:id="@+id/dotTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="@dimen/dot_top_margin"
        android:src="@drawable/dot_gray" />/>

    <ImageView
        android:id="@+id/dotThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="@dimen/dot_top_margin"
        android:src="@drawable/dot_gray" />/>

    <ImageView
        android:id="@+id/dotFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="@dimen/dot_top_margin"
        android:src="@drawable/dot_gray" />/>

    <ImageView
        android:id="@+id/imgDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="@dimen/dot_top_margin"
        android:src="@drawable/dot_colored" />

</RelativeLayout>
