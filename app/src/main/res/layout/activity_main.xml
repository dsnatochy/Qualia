<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="co.poynt.app.qualia.MainActivity">

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- This title strip will display the currently visible page title, as well as the page titles for adjacent pages. -->
        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />

    </android.support.v4.view.ViewPager>

    <!-- nagivation dots -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dot_top_margin"
        android:layout_marginLeft="250dp"
        android:src="@drawable/dot_gray"
        android:id="@+id/dotOne"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dot_top_margin"
        android:layout_marginLeft="280dp"
        android:src="@drawable/dot_gray"
        android:id="@+id/dotTwo"/>/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dot_top_margin"
        android:layout_marginLeft="310dp"
        android:src="@drawable/dot_gray"
        android:id="@+id/dotThree"/>/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dot_top_margin"
        android:layout_marginLeft="340dp"
        android:src="@drawable/dot_gray"
        android:id="@+id/dotFour"/>/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dot_top_margin"
        android:layout_marginLeft="250dp"
        android:src="@drawable/dot_colored"
        android:id="@+id/imgDot"/>

</RelativeLayout>
